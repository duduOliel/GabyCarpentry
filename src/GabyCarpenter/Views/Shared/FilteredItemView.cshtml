@model GabyCarpenter.Models.Carpentry.ItemModel

@if (Model.Image.Count > 0) { 
<div id="carousel-@Model.Id" class="carousel slide" data-ride="carousel" data-interval="2000">
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/SavedImages?id=@Model.Image.First().FileId" atl="picture" class="filteredImageFixedSize"/>
        </div>

@foreach (var image in Model.Image.Except(new List<GabyCarpenter.Models.Carpentry.SavedImage> { Model.Image.First() }).ToList())
{
    <div class="item">
        <img src="~/SavedImages?id=@image.FileId" atl="picture" class="filteredImageFixedSize" />
    </div>
}
    </div>
</div> <!-- Carousel -->

}
<h3>@Model.Name</h3>
<p>Size: @Model.Height X @Model.Width X @Model.Depth</p>
<p>price: @Model.Price</p>

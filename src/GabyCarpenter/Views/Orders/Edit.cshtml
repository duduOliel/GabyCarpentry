@model GabyCarpenter.Models.Carpentry.OrderModel

@{
    ViewData["Title"] = "Edit";
}
@section header{
    <h1>Edit Order</h1>
    }
<section>

    <form asp-action="Edit">
        <div class="form-horizontal">

            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="clientName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="clientName" class="form-control" />
                    <span asp-validation-for="clientName" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="phoneNumber" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="phoneNumber" class="form-control" />
                    <span asp-validation-for="phoneNumber" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SheepingAddress" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="SheepingAddress" class="form-control" />
                    <span asp-validation-for="SheepingAddress" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="status" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                    <select asp-for="status" class="form-control" asp-items="@new SelectList(Enum.GetValues(typeof (GabyCarpenter.Models.Carpentry.OrderStatus)))"></select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</section>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model GabyCarpenter.Models.Carpentry.ItemModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create new Item</h2>
<section>
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="form-horizontal">
          
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Height" class="form-control" />
                    <span asp-validation-for="Height" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Width" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Width" class="form-control" />
                    <span asp-validation-for="Width" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Depth" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Depth" class="form-control" />
                    <span asp-validation-for="Depth" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="amountInStock" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="amountInStock" class="form-control" />
                    <span asp-validation-for="amountInStock" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="tags" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="tags" class="form-control" data-role="tagsinput" />
                    <span asp-validation-for="tags" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input type="file" asp-for="Image" class="form-control" accept="image/*" multiple />
                    <span asp-validation-for="Image" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="supplier" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="supplier" class="form-control" asp-items="ViewBag.suppliers"></select>
                    <span asp-validation-for="Image" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>


    </form>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
